<h1>Flight Destinations</h1>
<hr />
<h2>Destinations:</h2>
@if (Model.Count != 0)
{
  <ul>
    @foreach (var flight in Model)
    {
      <li><a href='/flights/@flight.GetId()'>@flight.GetArrivalCity()</a></li>
    }
  </ul>
}
<h4><a href="/flights/new">Add new destination</a></h4>
<h4><a href="/">Return home</a></h4>
